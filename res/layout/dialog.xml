<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@color/ttexxt"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:orientation="vertical" >

    </LinearLayout>

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="200dp" android:background="@drawable/dialog" android:scrollbarFadeDuration="0">

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="fill"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Custom Dialog"
            android:textColor="@color/bbluue"
            android:textSize="18dp" android:paddingTop="10dp"/>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical" android:background="@color/white">

    </LinearLayout>

    <Button
        android:id="@+id/dialogButtonOK"
        style="@style/Stil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Zapri" />

</LinearLayout>